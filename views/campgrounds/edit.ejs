<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= camp._id %>?_method=put" method="post" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title %>" required/>
      </div>
      <div class="mb-3">
        <labe class="form-label" for="location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location" value="<%= camp.location %>"required/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="images">Add images</label>
        <input type="file" name="images" id="images" multiple>
      </div>
      <div class="mb-3">
        <label for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="text" class="form-control" id="price" aria-label="price" aria-describedby="price-label" placeholder="0.0" name="campground[price]" value="<%= camp.price %>"required>
        </div>
      </div>
      
      <div class="mb-3">
        <labe class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= camp.description %> </textarea>
      </div>
      <div class="mb-3">
        <% camp.images.forEach((img, i) => {%>
          <img src="<%=img.thumbnail%> " alt="" class="img-thumbnail">
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%= img.filename %>">
          </div>
          <label for="image-<%=i %>">Delete Image?</label>
        <%}) %> 
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= camp._id %>">Back To Campground</a>
  </div>
</div>