<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-3">
  <div class="row flex-fill">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow d-flex align-items-center">
        <img
          src="<%=currentUser.images.thumbnail%>"
          alt=""
          class="card-img-top profile-img mt-3" />
        <span class="justify-content-end"
          ><a href="/profile/<%= currentUser._id %>/editImg" class="text-muted"
            >Edit Picture</a
          ></span
        >
        <div class="card-body text-center pt-1">
          <h3 class="card-title"><%= currentUser.username %></h3>
          <p class="card-text">
            <strong>Email:</strong> <%= currentUser.email %>
          </p>
          <p class="card-text">
            <strong>First:</strong> <%= currentUser.firstName %>
          </p>
          <p class="card-text">
            <strong>Last:</strong> <%= currentUser.lastName %>
          </p>
          <p class="card-text">
            <strong>Phone:</strong> <%= currentUser.phoneNumber %>
          </p>
          <hr />
          <p class="card-text">
            <strong>Camps Published:</strong> <%= totalCamps %>
          </p>
          <p class="card-text">
            <strong>Reviews Left:</strong> <%= numReviews %>
          </p>
        </div>
        <a
          href="/profile/<%= currentUser._id %>/edit"
          class="text-muted justify-content-start mb-3"
          >Edit Profile</a
        >
      </div>
    </div>
  </div>
</div>

